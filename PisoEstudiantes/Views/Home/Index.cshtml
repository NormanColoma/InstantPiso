            @Html.ActionLink("Busco habitación/piso", "Pisos", "Busqueda", new { id = "Alicante" }, new { @class = "btn btn-primary btn-search", @id="searchButton"})
            <a href="http://asp.net" class="btn btn-primary btn-success btn-search">Alquilo habitación/piso</a>
        </div>
        <script type="text/javascript">
            $(function(){
                $("#cities").change(function () {
                    var city = this.value;
                    city = city.replace(" ", "");
                    var link = "Busqueda/Pisos/" + city;
                    $("#searchButton").attr("href", link);
                })
            })
        </script>   

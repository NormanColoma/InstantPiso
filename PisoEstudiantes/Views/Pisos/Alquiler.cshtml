                            <label>Código postal</label>
                            @Html.TextBoxFor(m => m.postal_code, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.postal_code, "", new { @class = "text-danger" })
                        </div>
                </li>
            </ul>
        </div>
